<html>

<!-- includes -->
<script src="jquery-2.1.3.js"></script>

<style>
#chatbox{
	width:550px;
	height:400px;
	border: 1px solid lightgray;
	margin-bottom:15px;
	overflow:scroll;
}

#chatinput{
	width:370px;
	padding-left:8px;
}

#nameinput{
	width:80px;
}

.userclass{
	color:blue;
}

.botclass{
	color:green;
}

.nomessage{
	color:gray;
}

.hidediv{
	display:none;
	text-align:center;
	margin-top:8px;
	margin-bottom:8px;
}

.hiddeninput{
	width:450px;
}

</style>

<body>
<center>
<div id="loginBox">
</div>
</center>
<div id="chatbox">

</div>

<!-- <form onsubmit="chatSend(); return;"> -->
<input id="nameinput" class="userclass" type="text" value="sam"/> : <input id="chatinput" type="text"/><button onclick="chatSend();">enter</button>
<!-- </form> -->

</body>

     <script>
	// Global Variables
	chatbotName = "chat_bot";	
	count = 0;

	// Listeners
	$('#chatinput').on('keydown', function(e) {
   	 if (e.which == 13) {
		chatSend();
        	e.preventDefault();
    	}
	});

	function updateScroll(){
          var element = document.getElementById("chatbox");
          element.scrollTop = element.scrollHeight;
       }

	// This occurs after chat message is submitted
       function chatSend(){
		var inputText = document.getElementById("chatinput").value;
		var userName = document.getElementById("nameinput").value;
		var chatBox = document.getElementById("chatbox");
		
		chatBox.innerHTML = chatBox.innerHTML 
				    + '<span class="userclass">' + userName + '</span>' + ': '
				    + '<span class="usertext">' + inputText + '</span>'
				    + '<br>';

		// Update Scroll
		updateScroll();

		// -------------------------------------------------------------
		// AJAX Code goes here, send message to server and get response.
		// -------------------------------------------------------------

		$.ajax({
		    url: "fresponse?original=" + inputText,
		    type: "POST",
		    dataType: "json",
		 // data: {"original": inputText},
		success: function(data){
	 	try{
       		chatBox.innerHTML = chatBox.innerHTML 
				    + '<span class="botclass">' + chatbotName + '</span>' + ': '
				    + '<span class="nomessage">' + data.body + '</span>'
				    + '<br>';

		// Update Scroll
		updateScroll();

		}
		catch(err){
		// if(no message found){
		var noMsg = 'No Messages found, click <a href="#!" onclick="showMsgDiv(' 
			     + count + ')">here</a> to submit your own!';

		// Add response
		chatBox.innerHTML = chatBox.innerHTML 
				    + '<span class="botclass">' + chatbotName + '</span>' + ': '
				    + '<span class="nomessage">' + noMsg + '</span>'
				    + '<br>';

		// Update Scroll
		updateScroll();

		// Add hidden div
		chatBox.innerHTML = chatBox.innerHTML
				    + '<div id="' + count + '" class="hidediv">'
				    + '<input id="hi' + count + '" type="text" class="hiddeninput"><button onclick="hiddenSubmit(' + count + ',\'' + inputText + '\')">submit</button>';
		}
    		},
	        error: function(error){
			 console.log("Error:");
			 console.log(error);
		    }
		});

		// -------------------------------------------------------------
		// End AJAX
		// -------------------------------------------------------------


		count++;
	}

	function showMsgDiv(id){
		document.getElementById(id).style.display = "block";
		// Update Scroll
		updateScroll();
	}
	
	// Adding a new message to database
	function hiddenSubmit(id, ogText){

		var userName = document.getElementById("nameinput").value;
		var inText = document.getElementById("hi" + id).value;

		// -------------------------------------------------------------
		// AJAX Code goes here, send message to server and get response.
		// -------------------------------------------------------------

		$.ajax({
		    url: "finput?o=" + ogText + "&s=" + userName + "&b=" + inText,
		    type: "POST",
		    dataType: "json",
		 // data: {"original": inputText},
		success: function(data){
			alert("message submitted!");
    		},
	        error: function(error){
			 alert("message failed!");
		    }
		});

		
		// -------------------------------------------------------------
		// End AJAX
		// -------------------------------------------------------------

		document.getElementById(id).style.display = "none";
	}
     </script>

</html>
